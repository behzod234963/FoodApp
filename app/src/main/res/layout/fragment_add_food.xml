<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot_addFood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddFood"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:background="#22E286"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Add Food"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|end">
            <Button
                android:id="@+id/btnCancel_fr"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/pic_clear"
                android:drawableTint="@color/white"
                android:background="@drawable/bg_buttons"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:padding="10dp">
        <EditText
            android:id="@+id/etFoodName_frAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_et"
            android:layout_margin="10dp"
            android:hint="Food Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:inputType="textMultiLine"
            android:paddingStart="20dp"
            android:textColorHint="#201C1C"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:padding="10dp">
        <EditText
            android:id="@+id/etNProducts_frAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_et"
            android:layout_margin="10dp"
            android:hint="Necessary Products"
            android:textSize="18sp"
            android:gravity="start"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:paddingStart="20dp"
            android:textColorHint="#201C1C"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp">
        <EditText
            android:id="@+id/etMoP_frAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_et"
            android:layout_margin="10dp"
            android:hint="Method of Preparation"
            android:gravity="top"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:inputType="textMultiLine"
            android:paddingStart="20dp"
            android:textColorHint="#201C1C"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:gravity="center|end"
        android:padding="10dp">
        <Button
            android:id="@+id/btnSave_frAdd"
            android:layout_width="200dp"
            android:layout_height="60dp"
            app:backgroundTint="@null"
            android:text="Save"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/bg_buttons"/>
    </LinearLayout>
</LinearLayout>